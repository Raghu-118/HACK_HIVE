        }

        .container {
            justify-content: center;
            max-width: 700px;
            width: 100%;
            margin: 0 auto;
            background-color: white;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            overflow: hidden;
            box-sizing: border-box;
            animation: popUp 0.8s ease-out forwards;
            
          
        }

        @keyframes popUp {
            0% {
                transform: scale(0);
                opacity: 0;
            }
            80% {
                transform: scale(1.1); /* Slight overshoot for bounce */
