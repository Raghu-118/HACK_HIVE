            }
            .fee-card {
                flex-direction: column;
                text-align: center;
            }
            .info-card h3 {
                font-size: 12px;
            }
            .payment-info {
                font-size: 10px;
                padding: 6px 0;
            }
            .reprocess-button {
                padding: 6px 10px;
                font-size: 10px;
            }
        }
    </style>
</head>
